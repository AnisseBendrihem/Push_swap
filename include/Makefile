# Nom du programme
NAME = push_swap

# Fichiers source
SRC = 

# Fichiers objets
OBJ = $(SRC:.c=.o)

# Compilateur & flags
CC = gcc
CFLAGS = -Wall -Wextra -Werror -Iinclude

# Couleurs
NEON_GREEN = \033[38;2;57;255;20m
NEON_PINK = \033[38;2;255;20;147m
NEON_CYAN = \033[38;2;0;255;255m
NEON_PURPLE = \033[38;2;180;0;255m
RESET = \033[0m

# RÃ¨gle par dÃ©faut
all: $(NAME)
	@echo "$(NEON_GREEN)ðŸ’¾ [SYSTEM] Compilation de Push Swap... [OK]$(RESET)"

# Compilation de l'exÃ©cutable
$(NAME): $(OBJ)
	@echo "$(NEON_CYAN)ðŸ”§ Linking...$(RESET)"
	@$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

# Nettoyage des fichiers objets
clean:
	@echo "$(NEON_PURPLE)ðŸ§½ Nettoyage des fichiers .o...$(RESET)"
	@rm -f $(OBJ)

# Nettoyage complet
fclean: clean
	@echo "$(NEON_PINK)ðŸ’£ Destruction de l'exÃ©cutable $(NAME)...$(RESET)"
	@rm -f $(NAME)

# Recompilation from scratch
re: fclean all

# Test d'exÃ©cution
run: all
	@echo "$(NEON_CYAN)ðŸ‘¾ Lancement de $(NAME)...$(RESET)"
	@./$(NAME)

.PHONY: all clean fclean re run
